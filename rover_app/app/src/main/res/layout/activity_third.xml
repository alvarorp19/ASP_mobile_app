<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/frameLayout1_1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/red"
                android:gravity="center_vertical"
                android:text="ROVER MOBILE APP | CONTROL"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/miImagen"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/rover_image"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout1_6"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/rounded_element"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/miImagen1_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/recicler_view_frame"/>

            <com.example.joystickjhr.JoystickJhr
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />


        </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout1_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_element"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/miImagen1_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/recicler_view_frame"/>


            </FrameLayout>
    </LinearLayout>
</LinearLayout>